<%= stylesheet_link_tag "administration" %>
<nav class="navbar navbar-default navbar-fixed-top navbar-custom">
    <a class="navbar-brand">Employee Recognition Administration</a>
    <p class="navbar-text navbar-right signout">
        <%= link_to 'Sign Out', sign_out_path, method: :delete %></li>

</p>
</nav>
<div class="container">

<h2>Welcome
    <%= current_user.name %>
</h2>

<h2>Site Administration</h2>
<div class="row">
    <div class="col-md-8">
        <div class="container-0">
            <div class="box-0">
                <p>Users</p>
            </div>
        </div>
        <% @user_select.each do |user| %>

        <div class="container-1">

            <div class="box-1">

                <%= user.name %>
            </div>
            <div class="box-2">

                <%= link_to '<i class="glyphicon glyphicon-pencil"></i> '.html_safe,  edit_admin_path(user), class: 'btn btn-default'  %>
            </div>
            <div class="box-3">

                <%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %>
            </div>

        </div>
        <% end %>

        <!--   End Code for the edit button  __-->

        <div class="container-0">
            <div class="box-0">
                <p>Non-Admins</p>
            </div>
        </div>

        <% @user_select1.each do |user| %>

        <div class="container-1">

            <div class="box-1">

                <%= user.name %>
            </div>
            <div class="box-2">

                <%= link_to '<i class="glyphicon glyphicon-pencil"></i> '.html_safe,  edit_admin_path(user), class: 'btn btn-default', method: :get  %>
            </div>
            <div class="box-3">

                <%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %>
            </div>

        </div>
        <% end %>
    </div>
    <div class="col-md-4 ">
      <div class="container-2">
            <H2 class="csv">Generate CSV Reports</h2>
      </div>
    <%= form_tag("/admin.csv", method: 'GET') do %>
    <%= select_tag "options", grouped_options_for_select(grouped_options = {
      'Award Type' => [['Kudos', 'kudos'], ['Employee of the Month', 'eom'],['Employee of the Year', 'eoy']],
      'By Quarter' => [['First Quarter', 1], ['Second Quarter', 2], ['Third Quarter', 3], ['Fourth Quarter', 4]]}) %>

      <%= button_tag(type: "submit", class: "btn btn-primary") do %>
          Generate Report
      <% end %>
      <% end %>
      </div>
</div>

</div>
