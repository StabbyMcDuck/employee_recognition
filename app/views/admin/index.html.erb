<% if current_user %>
  <% if current_user.role_type == "non_admin" %>
   <script type="text/javascript">
    window.location.href="/accessdenied"  
  </script>
<% end %> 
<% end %> 

<%= stylesheet_link_tag "administration" %>

<div class="container">

<h2>Welcome
    <%= current_user.name %>
</h2>

<h2>Site Administration</h2>
<div class="row">
    <div class="col-md-8">
        <div class="container-0">
            <div class="box-0">
                <p>Users</p>
            </div>
        </div>
        <% @user_select.each do |user| %>

        <div class="container-1">

            <div class="box-1">

                <%= user.name %>
            </div>
            <div class="box-2">

                <%= link_to '<i class="glyphicon glyphicon-pencil"></i> '.html_safe,  edit_admin_path(user), class: 'btn btn-default'  %>
            </div>
            <div class="box-3">

                <%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %>
            </div>

        </div>
        <% end %>

        <!--   End Code for the edit button  __-->

        <div class="container-0">
            <div class="box-0">
                <p>Non-Admins</p>
            </div>
        </div>

        <% @user_select1.each do |user| %>

        <div class="container-1">

            <div class="box-1">

                <%= user.name %>
            </div>
            <div class="box-2">

                <%= link_to '<i class="glyphicon glyphicon-pencil"></i> '.html_safe,  edit_admin_path(user), class: 'btn btn-default', method: :get  %>
            </div>
            <div class="box-3">

                <%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %>
            </div>

        </div>
        <% end %>
    </div>
    <div class="col-md-4">What should we put here... hmmmmmmmmm?</div>
</div>

</div>
