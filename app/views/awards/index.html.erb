<p id="notice"><%= notice %></p>

<% if current_user %>
  <%=h current_user.email %>
    <li><%= link_to 'Sign Out', sign_out_path, method: :delete %></li>
<% end %>

<h1>Awards</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Awardee</th>
      <th>Award Type</th>
      <th>Granted</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @awards.each do |award| %>
      <tr>
        <td><%= award.employee_name %></td>
        <td><%= award.award_type %></td>
        <td><%= award.grant_date.strftime("%B %d, %Y") %></td>
        <td><%= link_to 'Show', award %></td>
        <% if award.granter_id == current_user.id %>
          <td><%= link_to 'Edit', edit_award_path(award) %></td>
          <td><%= link_to 'Destroy', award, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
        </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Award', new_award_path, class: "btn btn-success" %>
