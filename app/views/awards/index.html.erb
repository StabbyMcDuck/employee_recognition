<p id="notice"><%= notice %></p>

<h1>Awards</h1>

<table>
  <thead>
    <tr>
      <th>Type</th>
      <th>Employeename</th>
      <th>Employeeemail</th>
      <th>Datecreated</th>
      <th>Grantedby</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @awards.each do |award| %>
      <tr>
        <td><%= award.type %></td>
        <td><%= award.employeename %></td>
        <td><%= award.employeeemail %></td>
        <td><%= award.datecreated %></td>
        <td><%= award.grantedby %></td>
        <td><%= award.user %></td>
        <td><%= link_to 'Show', award %></td>
        <td><%= link_to 'Edit', edit_award_path(award) %></td>
        <td><%= link_to 'Destroy', award, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

