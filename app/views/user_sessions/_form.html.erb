
<%= form_for user_session, url: user_session_path do |f| %>
    <% if user_session.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(user_session.errors.count, "error") %> prohibited:</h2>
          <p>
            Email/password combination is invalid.
          </p>
        </div>boot
    <% end %>

    <div class="panel panel-success">
    <% if flash[:alert] %>
      <div id="alert">
         <%= flash[:alert] %> 
      </div>
    </div>

<% end %>
    <div class="jumbotron" align="center">
        <p class="lead">
      Employee Recognition Center
    </p>
    <%= f.label :email %><br />
    <%= f.text_field :email %><br />
    <br />
    <%= f.label :password %><br />
    <%= f.password_field :password %><br />
    <br />
    <%= f.submit "Login", class: 'btn btn-success' %>
    <br>
    <br>
    <%= link_to "Create a new account", createuser_path %><br>
    <%= link_to "Forgotten password?", new_password_reset_path %>
</div>
<% end %>


